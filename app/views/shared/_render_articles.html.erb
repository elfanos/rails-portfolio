
<div class="col-md-3 col-lg-3 col-xs-3 col-sm-3">
    <div class="article-picture">
      <%=link_to(article.document.url(:original, false)) do %>
        <%=image_tag(article.picture.height_thumb, class:"img-responsive")%>
      <%end%>
    </div>
      <div class="header-text">
        <%=link_to(article.document.url(:original, false)) do %>
          <h2><%=article.name%></h2>
        <%end%>
      </div>
</div>
