      	  <div class="headers">
            <h2><strong>about</strong></h2>

          </div>
          <div class="text">
            <p>
              <%if !@profile.nil?%>
                <%if !@profile.about.nil?%>
                  <%=@profile.about%>
                <%end%>
              <%end%>
            </p>
          </div>
          <div class="headers">
            <h2><strong>experince</strong></h2>

          </div>
          <div class="text">
            <p>
              <%if !@profile.nil?%>
                <%if !@profile.experince.nil?%>
                  <%=@profile.experince%>
                <%end%>
              <%end%>
            </p>
          </div>
          <div class="headers">
            <h2><strong>Contact me!</strong></h2>

          </div>
          <div class="text">
            <p>
